<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ICS.Windows.DialogPage"
             NavigationPage.HasNavigationBar="False">
    <StackLayout >
        <StackLayout >
            <ScrollView>
                <StackLayout x:Name="MassageScroll" Orientation="Vertical" Margin="20" >
                    <Frame BackgroundColor="Black" CornerRadius="60" HorizontalOptions="Start">
                        <Label Text="тестовое сообщение " TextColor="White" />
                    </Frame>
                    <Frame BackgroundColor="Black" CornerRadius="60" HorizontalOptions="End">
                        <Label Text="тестовое сообщение от клиента" TextColor="White" />
                    </Frame>
                </StackLayout>
            </ScrollView>
        </StackLayout>
        <StackLayout Orientation="Horizontal"   Margin="10,0,20,20" VerticalOptions="EndAndExpand">
            <Frame Padding="20,0,20,0" CornerRadius="60" BackgroundColor="Black" WidthRequest="300" >
                <Entry x:Name="InputEntry" TextColor="White"/>
            </Frame>
            <Button x:Name="SendButton" CornerRadius="90" HorizontalOptions="End" ImageSource="send.png"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
