<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ICS.MainPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#131415">

    <StackLayout>
        <StackLayout Orientation="Vertical" VerticalOptions="Center">
            <Image Source="logotext.png"/>
            <StackLayout Margin="20,0,20,0" >
                <Label x:Name="LoginLabel" Text="Логин:" TextColor="White"/>
                <Frame CornerRadius="60" Padding="20,0,20,0" BackgroundColor="Black">
                    <Entry x:Name="LoginEbtry" Keyboard="Numeric" TextColor="White"/>
                </Frame>
            </StackLayout>
            <StackLayout Margin="20" >
                <Label x:Name="PasswordLabel" Text="Пароль:" TextColor="White"/>
                <Frame CornerRadius="60" Padding="20,0,20,0" BackgroundColor="Black">
                    <Entry x:Name="PasswordEbtry" IsPassword="True" TextColor="White" />
                </Frame>
            </StackLayout>
            <Button x:Name="LoginButton" Text="Войти" Margin="20,20,20,0" CornerRadius="60" Clicked="OnButtonClickedSigIn"/>
            <Button x:Name="LogupButton" Text="Зарегистрироватся" Margin="20,20,20,0" CornerRadius="60" Clicked="OnButtonClickedSungUp"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
